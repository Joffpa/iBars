@model ExhibitGrid.ViewModel.v2.GridVm
@{
    ViewBag.Title = "DynamicViewGrid";
}
<script src="~/Scripts/GridV2/grid.v2.js"></script>
<script src="~/Scripts/GridV2/directives.v2.js"></script>
<script src="~/Scripts/GridV2/modelService.v2.js"></script>
<link href="~/Content/exhibitGrid.v2.min.css" rel="stylesheet" />
@*<script src="~/Scripts/inversify.js"></script>*@


<div ng-app="app.v2">
    <div ng-controller="gridController as gridCtrl">        
        <ul class="grid-wrapper">
            <li ng-repeat="row in gridCtrl.GridVm.Rows track by row.RowCode" ng-controller="rowController as rowctrl" class="row-wrapper">
                <div ng-switch="row.Class">

                    <div class="{{row.Class}}" ng-switch-when="header">
                        <div class="cell text-cell cell-2x">
                            {{row.Text }} <br />
                        </div>
                    </div>
                    <div ng-class="" class="row-inline {{row.Class}}" ng-switch-when="data">
                        <div class="cell-wrapper">
                            <div class="cell select-cell" ng-show="row.SelectionCell.IncludeSpaceForCell">
                                <input type="checkbox" ng-show="row.SelectionCell.AllowSelect" ng-model="row.SelectionCell.IsSelected">
                            </div>
                        </div>
                        <div class="cell-wrapper">
                            <div class="cell crud-cell" ng-show="row.CrudCell.IncludeSpaceForCell">
                                <div ng-switch="row.CrudCell.CrudFunctionality">
                                    <i ng-switch-when="create" style="cursor:pointer" ng-click="rowCtrl.addRow()" class="fa-plus fa-2x"></i>
                                </div>
                            </div>
                        </div>
                        @foreach (var cell in Model.DataRows[0].Cells.OrderBy(c => c.Order))
                        {
                            <div class="cell-wrapper"> Cell @cell.ColCode</div>
                        }
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>
